<!--顶部切换栏-->
<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" catchtap="swichNav">
    <image class="icon" src='../../images/social/dt.png'  data-current="0"></image>
    <view>动态</view>
  </view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" catchtap="swichNav">
    <image class="icon" src='../../images/social/qz.png' data-current="1" ></image>
    <view>群组计划</view>
  </view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" catchtap="swichNav">
    <image class="icon" src='../../images/social/gd.png' data-current="2" >  </image>
    <view> 共读</view>
  </view> 
</view>


<!-- 具体展开 -->

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 15}}px" bindchange="bindChange">
  <!-------------------动态页--------------------- -->
  <swiper-item>
    <view>我是哈哈</view>
  </swiper-item>



  <!-------------------群组计划--------------------- -->
  <swiper-item>
    <view>我是呵呵</view>
  </swiper-item>


  <!---------------------共读：在下方--------------------- -->
    <swiper-item>
    <view></view>
    </swiper-item>
</swiper>

<!---------------------共读--------------------- -->
<view class='backpicture' wx:if='{{currentTab == 2}}'>
  <swiper class='movie-swiper' indicator-dots='{{true}}' previous-margin='50rpx' next-margin='50rpx' current='{{currentIndex}}'>
    <swiper-item class='movie' wx:for="{{bookCommenlist}}">
      <view class='container movie-card' data-movie-id='{{item.id}}'>
        <image class='bool-image' src="{{item.image}}  "></image>
        <text>主编推荐：{{item.detail}}</text>
        <text>{{item.num}}</text>
        <!--工具实现-->
      </view>
    </swiper-item>
  </swiper>
</view>