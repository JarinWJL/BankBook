.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
} 
.background {
  width: 100%;
  height: 100%;
  position:fixed; /*位置固定*/
  background-size:100% 100%;
  z-index: -1;/*将背景图位置设置为最底层*/
  opacity:0.4/*半透明*/
}