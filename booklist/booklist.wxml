<view class="">

  <!--设置背景-->
  <image class='background' src="/images/blackground.png" mode="aspectFill"></image>
  <!--index.wxml-->
  <view class="topBg">
    <view class="search">
      <view>
        <input type="text" placeholder="搜索"></input>
      </view>
    </view>
    <view class="menuList">
      <view class="menu" style="background-image: url('../../images/menu.png')">

        <text>定制书单</text>
      </view>
      <view class="menu" style="background-image: url('../../images/menu.png')">

